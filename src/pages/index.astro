---
import RecentPosts from "../components/RecentPosts.astro";
import Layout from "../layouts/Layout.astro";
import NewsletterSignUp from "../components/NewsletterSignUp.astro";
import { motion } from "framer-motion";
import brock from "/brock-profile-pic.webp";
import CalendarEmbed from "../components/CalendarEmbed.astro";

let title = "Home - Brock Herion";
let description =
  "I'm Brock. I'm a software developer and content creator. On this site, we look at content related to software development and my own journey as a developer";
let permalink = "https://brockherion.dev/";
let image = "/default-social.webp";
---

<Layout content={{ title, description, permalink, image }} enableAnimation>
  <section id="hero">
    <div
      class="flex h-screen flex-col items-center justify-center space-y-8 overflow-hidden text-center"
    >
      <motion.div
        client:load
        initial={{ opacity: 0 }}
        animate={{
          opacity: [0.1, 1],
          scale: [0.1, 1],
        }}
        transition={{
          duration: 2.5,
        }}
        className="relative flex items-center justify-center"
      >
        <div
          class="absolute mt-52 h-[200px] w-[200px] animate-ping rounded-full border border-amber-700/60"
        >
        </div>
        <div
          class="absolute mt-52 h-[300px] w-[300px] rounded-full border border-[#333333]"
        >
        </div>
        <motion.div
          client:load
          className="absolute mt-52 h-[500px] w-[500px] rounded-full border border-[#333333]"
          transition={{
            delay: 2.5,
            duration: 60,
            repeat: Infinity,
            ease: "linear",
          }}
          animate={{
            rotate: 360,
          }}
        >
          <div class="bg-amber-700 w-10 h-10 rounded-full"></div>
        </motion.div>
        <div
          class="absolute mt-52 h-[650px] w-[650px] rounded-full border border-amber-700"
        >
        </div>
        <div
          class="absolute mt-52 h-[800px] w-[800px] rounded-full border border-[#333333]"
        >
        </div>
      </motion.div>
      <img
        src={brock}
        height={144}
        width={144}
        alt="Profile picture"
        class="relative mx-auto h-36 w-36 rounded-full"
      />
      <div class="z-20">
        <h1 class="px-10 text-3xl font-semibold md:text-4xl lg:text-6xl">
          Brock Herion
        </h1>

        <div class="pt-5"></div>
      </div>
    </div>
    <section id="about"></section>
    <section id="newsletter-signup">
      <h4 class="text-2xl mb-2 text-zinc-50">Subscribe to my newsletter ðŸ“¥</h4>
      <NewsletterSignUp />
    </section>
    <section id="recent-posts">
      <RecentPosts />
    </section>
    <section id="contact">
      <CalendarEmbed />
    </section>
  </section>
</Layout>

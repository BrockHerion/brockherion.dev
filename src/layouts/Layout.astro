---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

const { content } = Astro.props;
const { title, description, permalink, image } = content;
---

<html lang={content.lang || "en"}>
  <head>
    <BaseHead {title} {description} {permalink} {image} />
  </head>

  <body class="bg-gray-900">
    <Header />
    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <slot />
      </div>
    </main>
    <footer
      class="flex-none 2xl:px-96 xl:px-72 lg:px-36 md:px-16 px-4 pt-6 flex flex-col items-center"
    >
      <div class="bg-emerald-400 w-12 h-1 mb-2"></div>
      <section class="flex items-center justify-center pb-4">
        <small>&copy; Brock Herion 2022</small>
      </section>
    </footer>
  </body>
</html>

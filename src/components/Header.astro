---
import { Icon } from "astro-icon";
import { Link } from "./ui/Link";
import { motion } from "framer-motion";
import { navigation } from "../lib/ constants";

type Props = {
  enableAnimation?: boolean;
};

const { enableAnimation } = Astro.props;
const transitionDelay = 0.5;
---

<header class="flex-none mx-auto max-w-7xl py-6 bg-neutral-950 top-0">
  <div class="max-w-4xl mx-auto border-b border-zinc-50 pb-4">
    <motion.div
      client:load
      initial={enableAnimation ? { opacity: 0, y: -20 } : false}
      animate={{ opacity: 1, y: 1 }}
      transition={{ duration: 0.5 }}
      className="text-zinc-400 text-xs text-center sm:text-left"
    >
      Brock Herion
    </motion.div>
    <motion.div
      client:load
      initial={enableAnimation ? { opacity: 0, y: -20 } : false}
      animate={{ opacity: 1, y: 1 }}
      transition={{ duration: 0.5, delay: transitionDelay }}
      className="flex justify-between items-center w-full mt-2 flex-col-reverse md:flex-row"
    >
      <nav>
        <ul class="flex items-center justify-center space-x-6">
          {
            navigation.map((item) => (
              <li>
                <Link href={item.href}>{item.name}</Link>
              </li>
            ))
          }
        </ul>
      </nav>
      <div class="flex items-center justify-center space-x-3 mb-4 md:m-0">
        <Link
          href="https://twitter.com/BrockHerion"
          rel="noreferrer"
          target="_blank"
          className="border-none"
        >
          <Icon name="ri:twitter-fill" />
        </Link>
        <Link
          href="https://github.com/BrockHerion"
          rel="noreferrer"
          target="_blank"
          className="border-none"
        >
          <Icon name="ri:github-fill" />
        </Link>
        <Link
          href="https://www.linkedin.com/in/brock-j-herion-34279a176/"
          rel="noreferrer"
          target="_blank"
          className="border-none"
        >
          <Icon name="ri:linkedin-box-fill" />
        </Link>
        <Link
          href="https://discordapp.com/users/328018708746338318"
          rel="noreferrer"
          target="_blank"
          className="border-none"
        >
          <Icon name="ri:discord-fill" />
        </Link>
      </div>
    </motion.div>
  </div>
</header>
